@model List<UserReadVm>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<a asp-action="Add" asp-controller="Account" class="btn btn-primary" >Add New User</a>

<table class="table table-border table-hover" >
    <tr>
        <th>N</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        @* <th>Email</th> *@
        <th>Title</th>
        <th>Details</th>

    </tr>

    @foreach(UserReadVm user in Model)
    {
        <tr>
            
            <td>@i</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Username</td>
            @* <td>@user.Email</td> *@
            @if(user.Discriminator == 'S')
            {
                <td>Student</td>
            }
            else if (user.Discriminator == 'A')
            {
                <td>Admin</td>
            }
            else if (user.Discriminator == 'P')
            {
                <td>Professor</td>
            }
            else if (user.Discriminator == 'E')
            {
                <td>Employee</td>
            }

            <td>
                <a href="/Account/Details?Username=@user.Username" >Details</a>
            </td>

        </tr>

        i++;
    }

</table>

