@model DepartmentReadVm

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Department</h1>
<hr />

<br />

<h3 class="text-danger">Are You Sure you want to delete this Department (@Model.Name) ?!</h3>


<br />

<a asp-controller="Department" asp-action="DeleteDepartment" asp-route-Id="@Model.Id" class="btn btn-primary" style="width:10%">Yes</a>
<a asp-controller="Department" asp-action="Index" class="btn btn-primary" style="width:10%">No</a>




