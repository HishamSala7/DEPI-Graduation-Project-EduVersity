
@model List<CourseLevelSemesterDepartmentVm>

<div class="container mt-5">
    <h3 class="mb-4 text-center">Course Enrollment</h3>

    <form asp-action="AddCoursesEnrollment" asp-route-Username="@ViewBag.Username" class="shadow-sm p-4 bg-white rounded border">

        <!-- Table for Courses -->
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Course Name</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].CourseName</td>
                            <td class="text-center">
                                <div class="form-check d-inline-flex justify-content-center align-items-center">
                                    <input class="form-check-input" type="checkbox" id="studentCheck_@i" name="[@i].IsSelected" value="true" />
                                    <input type="hidden" name="[@i].IsSelected" value="false" />
                                    <input type="hidden" name="[@i].CourseId" value="@Model[i].CourseId" />
                                    <label class="form-check-label ms-2" for="studentCheck_@i">Select</label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary px-4">Submit</button>
        </div>
    </form>
</div>