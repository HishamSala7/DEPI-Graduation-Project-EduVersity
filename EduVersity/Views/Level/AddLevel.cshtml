@model EduVersity.ViewModels.Level.LevelAddVm

@{
    ViewData["Title"] = "AddLevel";
}

<h1>Add New Level</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLevel">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelOrder" class="control-label"></label>
                @* <input asp-for="LevelOrder" class="form-control" /> *@
                <select asp-for="LevelOrder" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
                <span asp-validation-for="LevelOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
