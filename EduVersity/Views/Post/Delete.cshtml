

<h1 class="text-center text-danger mb-4">Delete Post</h1>

<hr />

<!-- Confirmation Message -->
<div class="text-center my-4">
    <h3 class="text-danger">Are you sure you want to delete this post?</h3>
    <p class="text-muted">This action cannot be undone.</p>
</div>

<!-- Buttons for Confirmation -->
<div class="text-center mt-4">
    <a asp-controller="Post" asp-action="DeletePost" asp-route-Id="@ViewBag.Id" class="btn btn-danger btn-lg mx-2" style="width: 120px;">Yes</a>
    <a asp-controller="Post" asp-action="Index" class="btn btn-secondary btn-lg mx-2" style="width: 120px;">No</a>
</div>
