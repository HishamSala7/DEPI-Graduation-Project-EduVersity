
@model RoleVm
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Role</h1>
<hr />

<br />

<h3 class="text-danger">Are You Sure you want to delete this role (@Model.RoleName) ?!</h3>


<br />

<a asp-controller="Role" asp-action="DeleteRole" asp-route-Id="@ViewBag.Id" class="btn btn-primary" style="width:10%">Yes</a>
<a asp-controller="Role" asp-action="Index" class="btn btn-primary" style="width:10%">No</a>


