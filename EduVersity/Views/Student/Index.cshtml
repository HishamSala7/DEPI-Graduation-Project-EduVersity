@model List<StudentReadVm>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<a asp-action="Add" asp-controller="Student" class="btn btn-primary">Add New Student</a>

<table class="table table-border table-hover">
    <tr>
        <th>N</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Level</th>
        <th>Status</th>
        <th>Details</th>


    </tr>

    @foreach (StudentReadVm Stud in Model)
    {
        <tr>

            <td>@i</td>
            <td>@Stud.FirstName</td>
            <td>@Stud.LastName</td>
            <td>@Stud.Username</td>
            <td>@Stud.LevelName</td>
            <td>@Stud.Status</td>
            

            <td>
                <a href="/Student/Details/@Stud.Id">Details</a>
            </td>

        </tr>

        i++;
    }

</table>

